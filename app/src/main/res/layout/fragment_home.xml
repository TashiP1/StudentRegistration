<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Home">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="370dp"
        android:layout_height="133dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112">

        <ImageView
            android:id="@+id/rublogo"
            android:layout_width="87dp"
            android:layout_height="104dp"
            android:src="@drawable/rublogo" />

        <TextView
            android:id="@+id/cst"
            android:layout_width="180dp"
            android:layout_height="97dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cst"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/cstlogo"
            android:layout_width="87dp"
            android:layout_height="104dp"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="281dp"
        android:layout_height="245dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/NewRegis"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/my_button"
            android:text="Register New Student"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:typeface="sans"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ExistingStudent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/my_button"
            android:text="Register Existing Student"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:typeface="sans" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cstwebsite"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/my_button"
            android:text="Know Your College"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:typeface="sans" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#393232"
        android:shadowRadius="1"
        android:text="In pursuit of preparing tomorrow's technologists"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828" />

</androidx.constraintlayout.widget.ConstraintLayout>